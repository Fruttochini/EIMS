@model EIMS.Models.LessonPrecenseViewModel

@{
    ViewBag.Title = "Create Lesson Precense";
}

@using (Html.BeginForm())
{
    <div>
        <p>@Html.DisplayFor(model => model.SubjectName) &nbsp;<span>@Html.DisplayFor(model => model.LessonDate)</span></p>
        <p>@Html.DisplayFor(model => model.TeacherName)</p>
        <div class="row">
            <div class="col-md-4">@Html.DisplayNameFor(model => model.StudentName)</div>
            <div class="col-md-2">@Html.DisplayNameFor(model => model.Precense)</div>
            <div class="col-md-2">@Html.DisplayNameFor(model => model.Mark)</div>
        </div>
        @foreach (var item in Model.RowList)
        {
            <div class="row">
                <div class="hidden">@Html.DisplayFor(modelItem => item.LessonDateID)</div>
                <div class="col-md-4">@Html.DisplayFor(modelItem => item.StudentName)</div>
                <div class="col-md-2">
                    @Html.EditorFor(modelItem => item.Precense, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.Precense, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(modelItem => item.Mark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.Mark, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

